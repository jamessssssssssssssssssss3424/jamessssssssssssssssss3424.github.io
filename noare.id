<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Noaré - Luxury You Can Wear</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <style>
        /* ------------------- */
        /* 1. CSS RESET & VARIABLES  */
        /* ------------------- */
        :root {
            --bg-color: #0a0a0a;
            --text-color: #f0f0f0;
            --primary-accent: #D4AF37; /* Gold */
            --secondary-bg: #1a1a1a;
            --font-heading: 'Cormorant Garamond', serif;
            --font-body: 'Inter', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            scroll-behavior: smooth;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            font-family: var(--font-body);
        }

        section {
            padding: 100px 5%;
            min-height: 80vh;
            border-bottom: 1px solid #222;
        }

        h1, h2, h3 {
            font-family: var(--font-heading);
            font-weight: 600;
        }

        h2.section-title {
            text-align: center;
            font-size: 3rem;
            margin-bottom: 60px;
            color: var(--primary-accent);
        }

        p {
            line-height: 1.7;
            color: #ccc;
        }
        
        .hidden {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

        .visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* ------------------- */
        /* 2. HEADER      */
        /* ------------------- */
        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 5%;
            z-index: 1000;
            transition: background-color 0.3s ease;
        }
        
        header.scrolled {
            background-color: rgba(10, 10, 10, 0.8);
            backdrop-filter: blur(10px);
        }

        .logo {
            font-family: var(--font-heading);
            font-size: 2.5rem;
            color: white;
            text-decoration: none;
            font-weight: 700;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            margin-left: 35px;
            font-weight: 500;
            transition: color 0.3s ease;
            padding-bottom: 5px;
            border-bottom: 2px solid transparent;
        }

        .navbar a:hover, .navbar a.active {
            color: var(--primary-accent);
            border-bottom: 2px solid var(--primary-accent);
        }
        
        /* ------------------- */
        /* 3. HERO       */
        /* ------------------- */
        #home {
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            min-height: 100vh;
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1635764222617-643031731665?q=80&w=1887&auto=format&fit=crop') no-repeat center center/cover;
        }

        .hero-content h1 {
            font-size: 6rem;
            color: white;
            margin-bottom: 10px;
        }

        .hero-content p {
            font-size: 1.5rem;
            color: #ddd;
            margin-bottom: 30px;
            font-family: var(--font-heading);
        }

        .cta-button {
            display: inline-block;
            padding: 12px 30px;
            background-color: var(--primary-accent);
            color: var(--bg-color);
            text-decoration: none;
            font-weight: bold;
            border-radius: 50px;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        .cta-button:hover {
            transform: scale(1.05);
            background-color: white;
        }

        /* ------------------- */
        /* 4. ABOUT      */
        /* ------------------- */
        #about {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        /* ------------------- */
        /* 5. COLLECTION    */
        /* ------------------- */
        .collection-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }

        .product-card {
            background-color: var(--secondary-bg);
            border-radius: 10px;
            overflow: hidden;
            text-align: center;
            transition: transform 0.3s ease;
        }
        
        .product-card:hover {
            transform: translateY(-10px);
        }

        .product-card img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

        .product-info {
            padding: 20px;
        }

        .product-info h3 {
            font-size: 1.8rem;
            margin-bottom: 10px;
        }

        /* ------------------- */
        /* 6. REVIEWS     */
        /* ------------------- */
        .reviews-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .review-card {
            background-color: var(--secondary-bg);
            padding: 30px;
            border-radius: 10px;
        }
        
        .review-card p {
            font-style: italic;
            margin-bottom: 20px;
        }
        
        .reviewer-name {
            font-weight: bold;
            color: var(--primary-accent);
            text-align: right;
        }
        
        /* ------------------- */
        /* 7. FOOTER     */
        /* ------------------- */
        footer {
            text-align: center;
            padding: 80px 5%;
            background-color: var(--secondary-bg);
        }
        
        .footer-content h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }
        
        .footer-content p {
            margin-bottom: 30px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }
        
        .social-links a {
            color: white;
            font-size: 1.8rem;
            margin: 0 15px;
            transition: color 0.3s ease;
        }
        
        .social-links a:hover {
            color: var(--primary-accent);
        }
        
        .copyright {
            margin-top: 40px;
            color: #888;
            font-size: 0.9rem;
        }
        
        /* ------------------- */
        /* 8. RESPONSIVE    */
        /* ------------------- */
        @media (max-width: 768px) {
            .navbar {
                display: none; /* Simplifikasi untuk mobile */
            }
            .logo {
                font-size: 2rem;
            }
            header {
                justify-content: center;
            }
            section {
                padding: 80px 5%;
            }
            h2.section-title {
                font-size: 2.5rem;
            }
            .hero-content h1 {
                font-size: 3.5rem;
            }
        }

    </style>
</head>
<body>

    <header>
        <a href="#home" class="logo">Noaré.</a>
        <nav class="navbar">
            <a href="#home" class="active">Home</a>
            <a href="#about">About</a>
            <a href="#collection">Collection</a>
            <a href="#reviews">Reviews</a>
            <a href="#contact">Contact</a>
        </nav>
    </header>

    <section id="home">
        <div class="hero-content hidden">
            <h1>Noaré</h1>
            <p>Luxury You Can Wear</p>
            <a href="https://shopee.co.id/your-shopee-username" target="_blank" class="cta-button">Shop Now on Shopee</a>
        </div>
    </section>

    <section id="about">
        <div class="about-content hidden">
            <h2 class="section-title">Our Philosophy</h2>
            <p>
                At Noaré, we believe that luxury should be accessible and wearable every day. Each piece is crafted with meticulous attention to detail, designed to be a timeless addition to your collection. We bring you elegance that complements your unique story.
            </p>
        </div>
    </section>

    <section id="collection">
        <h2 class="section-title hidden">Our Collection</h2>
        <div class="collection-grid">
            <div class="product-card hidden">
                <img src="https://images.unsplash.com/photo-1617038220319-276d3cfab638?q=80&w=1887&auto=format&fit=crop" alt="Étoile Collection">
                <div class="product-info">
                    <h3>Étoile</h3>
                    <p>Shine bright with our star-inspired collection.</p>
                </div>
            </div>
            <div class="product-card hidden">
                <img src="https://images.unsplash.com/photo-1599354784165-d053a537c220?q=80&w=1887&auto=format&fit=crop" alt="Nova Collection">
                <div class="product-info">
                    <h3>Nova</h3>
                    <p>Modern designs for a bold statement.</p>
                </div>
            </div>
            <div class="product-card hidden">
                <img src="https://images.unsplash.com/photo-1606760227091-3ddc3c055452?q=80&w=1887&auto=format&fit=crop" alt="Lira Collection">
                <div class="product-info">
                    <h3>Lira</h3>
                    <p>Classic elegance meets contemporary style.</p>
                </div>
            </div>
        </div>
    </section>
    
    <section id="reviews">
        <h2 class="section-title hidden">What Our Customers Say</h2>
        <div class="reviews-grid">
            <div class="review-card hidden">
                <p>"The quality is amazing for the price! I wear my Nova necklace every day and it still looks brand new. So elegant and simple."</p>
                <h4 class="reviewer-name">- Jessica L.</h4>
            </div>
            <div class="review-card hidden">
                <p>"I'm in love with the Étoile bracelet. It's so delicate and beautifully made. The packaging was also very luxurious. Highly recommend!"</p>
                <h4 class="reviewer-name">- Amanda S.</h4>
            </div>
            <div class="review-card hidden">
                <p>"Finally, affordable luxury that doesn't tarnish. I've bought several pieces from Noaré and they never disappoint. A must-have!"</p>
                <h4 class="reviewer-name">- Chloe T.</h4>
            </div>
        </div>
    </section>

    <footer id="contact">
        <div class="footer-content hidden">
            <h2>Get In Touch</h2>
            <p>Follow our journey and stay updated with our latest collections and special offers.</p>
            <div class="social-links">
                <a href="https://instagram.com/noare.id" target="_blank" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                <a href="https://shopee.co.id/your-shopee-username" target="_blank" aria-label="Shopee"><i class="fa-solid fa-cart-shopping"></i></a>
                <a href="https://tiktok.com/@your-tiktok-username" target="_blank" aria-label="TikTok"><i class="fab fa-tiktok"></i></a>
            </div>
            <p class="copyright">&copy; 2025 Noaré. All Rights Reserved.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const header = document.querySelector('header');
            const navLinks = document.querySelectorAll('.navbar a');
            const sections = document.querySelectorAll('section');
            const hiddenElements = document.querySelectorAll('.hidden');

            // 1. Ganti background header saat scroll
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });

            // 2. Highlight link navigasi yang aktif saat scroll
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.5
            };
            
            const sectionObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href').substring(1) === entry.target.id) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                sectionObserver.observe(section);
            });
            
            // 3. Animasi fade-in saat elemen masuk layar
            const animationObserver = new IntersectionObserver((entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            });

            hiddenElements.forEach((el) => animationObserver.observe(el));
        });
    </script>
</body>
</html>
